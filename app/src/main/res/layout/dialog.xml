<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="fill_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageDialog"
        android:layout_width="300dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/imageDialog"
        android:text="wtf"/>


    <ImageView
        android:id="@+id/twitter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textDialog"
        android:layout_alignParentStart="true"
        android:background="@drawable/left_bookmark_border"
        app:srcCompat="@drawable/twitter_logo" />


    <ImageView
        android:id="@+id/dialog_bookmark"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textDialog"
        android:layout_alignEnd="@+id/imageDialog"
        android:background="@drawable/right_bookmark_border"
        app:srcCompat="@drawable/bookmark" />

        android:text=" Submit " />

</RelativeLayout>

